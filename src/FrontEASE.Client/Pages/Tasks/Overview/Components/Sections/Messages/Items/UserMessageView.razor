@inject IUIManager uiManager

<Container Fluid>
    <Row>
        <Column ColumnSize="ColumnSize.Is8.OnWidescreen.Is4.WithOffset.OnWidescreen.Is10.OnMobile.Is2.WithOffset.OnMobile" TextAlignment="TextAlignment.Start" Padding="Padding.Is0">
            <Card Border="Border.Rounded" Class="border-custom-light">
                <MessageViewHeader />

                <CardBody Class="throws-shadow border-custom-light bg-custom-primary" Border="Border.Is0">
                    @Message.Content
                </CardBody>

                <MessageViewFooter />
            </Card>
        </Column>
    </Row>

</Container>

@code {
    [CascadingParameter]
    public TaskMessageDto Message { get; set; } = new();
}
