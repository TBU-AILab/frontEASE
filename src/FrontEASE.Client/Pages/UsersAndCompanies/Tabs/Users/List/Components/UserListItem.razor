@inject IUIService uiService
@inject IUIManager uiManager

<Column ColumnSize="ColumnSize.Is3.OnQuadHD.Is4.OnWidescreen.Is6.OnDesktop">
    <Card Shadow="Shadow.Small" Margin="Margin.Is4.FromBottom" Border="Border.Is2.Rounded" Class="border-custom-light" Overflow="Overflow.Hidden">
        <UserListItemHeader />
        <UserListItemBody />
    </Card>
</Column>

@code {
    private async Task RefreshViewAsync()
    {
        await InvokeAsync(StateHasChanged);
    }

    protected override async Task OnInitializedAsync()
    {
        uiService.RefreshRequested += RefreshViewAsync;
        await base.OnInitializedAsync();
    }
}