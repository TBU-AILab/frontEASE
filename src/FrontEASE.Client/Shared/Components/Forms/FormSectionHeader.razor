@inject IUIManager uiManager

<Row>
    <Column ColumnSize="ColumnSize.Is12" Padding="Padding.Is1.FromTop.Is1.FromBottom" Margin="Margin.Is4.FromTop" TextAlignment="TextAlignment.Start">
        <Heading Size="HeadingSize.Is3" Style="@($"color: {uiManager.Theme.TextColorOptions.Primary};")">
            @(DisplayText ?? string.Empty)
        </Heading>
    </Column>
</Row>


@code {
    [Parameter]
    public string? DisplayText { get; set; }
}