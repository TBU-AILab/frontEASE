@inject IUIManager uiManager

<ModalHeader Class="margin-background-offset-top-1" Style="@($"background-color: {uiManager.Theme.BackgroundOptions.Secondary}; border-color: {uiManager.Theme.BackgroundOptions.Light} !important;")">
    <Heading Size="HeadingSize.Is3" TextWeight="TextWeight.Bold" TextColor="@uiManager.Theme.TextColorOptions.Primary" Margin="Margin.Is0">
        @(DisplayText ?? string.Empty)
    </Heading>
</ModalHeader>


@code {
    [Parameter]
    public string? DisplayText { get; set; }
}